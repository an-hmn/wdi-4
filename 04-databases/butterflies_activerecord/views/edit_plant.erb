<form action="/plants/update" method="post">
  <input type="hidden" name="id" value="<%= @plant.id %>">

  <p>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= @plant.name %>" required>
  </p>

  <p>
    <label for="latin_name">Latin Name: </label>
    <input type="text" name="latin_name" id="latin_name" value="<%= @plant.latin_name %>">
  </p>

  <p>
    <label for="region">Region: </label>
    <input type="text" name="region" id="region" value="<%= @plant.region %>">
  </p>

  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" value="<%= @plant.photo %>" required>
  </p>

  <button>Update plant!</button>
</form>